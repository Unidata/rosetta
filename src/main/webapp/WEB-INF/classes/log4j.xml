<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">


   <appender name="pzhtaLogger" class="org.apache.log4j.DailyRollingFileAppender">
      <param name="File" value="${catalina.home}/logs/pzhta.log"/>
      <param name="Threshold" value="INFO" />
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="[%d{yyyy-MM-dd' 'HH:mm:ss Z}] %-5p [%c:%L] - %m%n"/>
      </layout>
   </appender>


   <logger name="edu.ucar.unidata.pzhta">
        <appender-ref ref="pzhtaLogger"/>
   </logger> 

  <root>
    <level value="WARN"/>
    <appender-ref ref="pzhtaLogger"/>
  </root>

  
</log4j:configuration>
